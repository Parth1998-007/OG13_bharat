<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lldateselection"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_10sdp">

        <TextView
            style="@style/TextHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/lbl_start_date"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvStartDate"
            style="@style/TextRegularBolLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="Select Start Date" />

        <ImageView
            android:id="@+id/aerrowStart"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_10sdp">

        <TextView
            style="@style/TextHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/lbl_end_date"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvEndDate"
            style="@style/TextRegularBolLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="Select End Date" />

        <ImageView
            android:id="@+id/aerrowEnd"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/right" />
    </LinearLayout>

    <Button
        android:id="@+id/btPauseOrder1"
        style="@style/DialogTitleText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Pause Order"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/regular_font"
        android:background="@color/colorPrimary"
        android:visibility="visible" />

</LinearLayout>
