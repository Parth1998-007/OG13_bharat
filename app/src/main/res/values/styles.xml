<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorButtonNormal">@color/colorButtonBg</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorButtonBg</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="DialogTitleText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>
    <style name="TextRegularBol">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>
    <style name="TextRegularBolLight">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>
    <style name="TextToolbar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>
    <style name="TextHeading">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="TextHeadingBold">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>
    <style name="TextHeadingLight">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textAllCaps">true</item>
    </style>




    <style name="TextRegularLight">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
    <style name="SearchEditText">
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingLeft">@dimen/_11ssp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>


    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AddCartButton">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@drawable/add_cart_button_bg</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
    </style>
    <style name="DoneButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@drawable/done_button_bg</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>

    <style name="SpinnerNumber">
        <item name="android:background">@color/white</item>
        <item name="android:entries">@array/numbers</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>
    <style name="SpinnerAlter">
        <item name="android:background">@color/white</item>
        <item name="android:entries">@array/numbers</item>
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>


    <style name="ImageSmall">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
    <style name="ImageStatus">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

</resources>
